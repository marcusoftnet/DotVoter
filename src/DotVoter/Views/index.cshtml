﻿@using Nancy
@using System.Linq
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
@{
    Layout = "Views/Shared/Layout.cshtml";
}

<h2>Create new event</h2>
<p>Create your own event to start gathering ideas and votes!</p>
<form method="post" action="http://dotvoter.apphb.com/event" class="form-horizontal well">
    <label for="name">Event name:</label>
    <textarea name="name" id="name" ></textarea>
    <br />
    <label for="maxVotes">Max votes:</label>
    <input type="text" name="maxVotes" id="maxVotes" value="3" />
    <br />
        <button type="submit" class="btn btn-primary" value="add">
            <i class="icon-plus icon-white"></i>Add event
        </button>                  
</form>
