<!doctype html>
<html>
  <head>
	<meta charset="utf-8">
	<title>Dot Voter 4000 - Event Awesomeness!</title>
	<link rel="stylesheet" href="/content/css/dotVoter.css">
	<style type="text/css">
		* { 
			-moz-box-sizing: border-box; 
			-webkit-box-sizing: border-box; 
			box-sizing: border-box; 
		}

		.topics {
			overflow: hidden;
		}

		.topic {
			width: 45%;
			float: left;
			display: inline-block;
			border: solid 1px hotpink;
			border-radius: 2px;
			margin: 10px;
			min-height: 100px;
			min-width: 200px;
			padding: 10px;
		}
	</style>
  </head>

  <body>
		<h1>Event: @Model.Name</h1>
		<h2>Create new topic:</h2>
      <form method="post" action="/event/@Model.Id/topic">
          <label for="name">Topic name:</label>
          <input type="text" name="name" id="name">
          <label for="category">Cateory (optional):</label>
          <input type="text" name="category" id="category" value="Idea" />
          <br />
          <input type="submit" name="submitNewTopic" value="Create new topic" />
      </form>
	<hr />
		<h1>Topics in Event Awesome, so far:</h1>
      <section class="topics">
          @foreach(var t in @Model.Topics){
            <article class="topic">
              <h2>@t.Name</h2>
              <p>@t.Category</p>
            </article>
          }
      </section>
  </body>

</html>
